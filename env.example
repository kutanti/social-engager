# ==============================================
# Social Engager - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your API keys

# ----------------------------------------------
# Azure OpenAI Configuration
# ----------------------------------------------
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure OpenAI Deployment Name (must match your Azure deployment)
AZURE_GPT41_DEPLOYMENT=gpt-41

# ----------------------------------------------
# Tavily API (for news search and research)
# Get your key at: https://tavily.com
# Free tier: 1000 searches/month
# ----------------------------------------------
TAVILY_API_KEY=your_tavily_api_key_here

# ----------------------------------------------
# X (Twitter) API Credentials
# Get your keys at: https://developer.twitter.com
# Free tier: 1500 tweets/month
# ----------------------------------------------
X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret_here
X_BEARER_TOKEN=your_x_bearer_token_here

# ----------------------------------------------
# Safety and Testing Options
# ----------------------------------------------
# Set to "true" to log tweets without posting
DRY_RUN=true

# Set to "true" to enable verbose logging
DEBUG=false
